{
    "configurations": [
    {
        "name": "Run GameBoy",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/GameBoy.exe",
        "args": [],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
