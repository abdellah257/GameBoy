{
    "configurations": [
    {
        "name": "Run GameBoy",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/GameBoy.exe",
        "args": ["${workspaceFolder}/tests/roms/test0.hex"],
        "stopAtEntry": true,
        "cwd": "${workspaceFolder}",
        "environment": [
            {
                "name": "GAMEBOY",
                "value": "${workspaceFolder}"
            },
            {
                "name": "LD_LIBRARY_PATH",
                "value": "${workspaceFolder}/packages/linux/lib:$LD_LIBRARY_PATH"
            }
        ],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ],
        "preLaunchTask": "Build GameBoy"
    }
    ]
}