        //     {
        //         "name": "GAMEBOY",
        //         "value": "${workspaceFolder}"
        //     },
        //     {
        //         "name": "LD_LIBRARY_PATH",
        //         "value": "$GAMEBOY/packages/raylib-5.0/lib:$LD_LIBRARY_PATH"
